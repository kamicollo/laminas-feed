{
    "name": "kamicollo/laminas-feed",
    "description": "provides functionality for Subscribing to feeds via PubSubHubBub protocol",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "feed",
        "pubsubhubbub"
    ],
    "homepage": "https://github.com/kamicollo/laminas-feed/",
    "config": {
        "sort-packages": true
    },    
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "laminas/laminas-escaper": "^2.5.2",
        "laminas/laminas-psr7bridge": "^1.2",
        "laminas/laminas-stdlib": "^3.2.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-db": "^2.8.2",
        "laminas/laminas-http": "^2.7",
        "phpunit/phpunit": "^5.7.27 || ^6.5.14 || ^7.5.20"
    },
    "suggest": {        
        "laminas/laminas-db": "Laminas\\Db component, for use with PubSubHubbub",
        "laminas/laminas-http": "Laminas\\Http for PubSubHubbub, and optionally for use with Laminas\\Feed\\Reader",
    },
    "autoload": {
        "psr-4": {
            "Laminas\\Feed\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\Feed\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }    
}
